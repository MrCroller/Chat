<Window x:Name="ConnectWnd" x:Class="WPFChat.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChat"
        mc:Ignorable="d"
        Title="Connect" Height="150" Width="400">
    <Grid>
        <TextBox x:Name="Name_TextBox" HorizontalAlignment="Left" Height="22" Margin="25,29,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="145" AutoWordSelection="True" MaxLines="1" MaxLength="8"/>
        <TextBox x:Name="Ip_Port_TextBox" HorizontalAlignment="Left" Height="23" Margin="25,67,0,0" TextWrapping="Wrap" Text="192.168.1.1:5050" VerticalAlignment="Top" Width="145" AutoWordSelection="True" MaxLines="1"/>
        <Button Content="Ввести" HorizontalAlignment="Left" Margin="225.423,67,0,0" VerticalAlignment="Top" Width="75" Height="23" Background="#FFECECEC" Click="Button_Click"/>

    </Grid>
</Window>
