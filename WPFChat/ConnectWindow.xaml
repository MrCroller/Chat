<Window x:Name="ConnectWnd" x:Class="WPFChat.ConnectWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChat"
        mc:Ignorable="d"
        Title="Connect" Height="150" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="43*"/>
            <ColumnDefinition Width="153*"/>
        </Grid.ColumnDefinitions>
        <TextBox x:Name="Name_TextBox" HorizontalAlignment="Left" Height="22" Margin="2,34,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="145" AutoWordSelection="True" MaxLines="1" MaxLength="8" FontSize="14" TextAlignment="Center" Grid.Column="1"/>
        <TextBox x:Name="Ip_Port_TextBox" HorizontalAlignment="Left" Height="24" Margin="2,66,0,0" TextWrapping="Wrap" Text="127.0.0.1:8080" VerticalAlignment="Top" Width="145" AutoWordSelection="True" MaxLines="1" FontSize="14" TextAlignment="Center" Grid.Column="1"/>
        <Button x:Name="ButtonConnect" Content="Connect" HorizontalAlignment="Left" Margin="172,65,0,0" VerticalAlignment="Top" Width="75" Height="24" Background="#FFECECEC" Click="Button_Click" FontWeight="Bold" Grid.Column="1"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,35,0,0" TextWrapping="Wrap" Text="Nickname:" VerticalAlignment="Top" FontSize="14" Height="19" Width="65"/>
        <TextBlock HorizontalAlignment="Left" Margin="22,67,0,0" TextWrapping="Wrap" Text="Address:" VerticalAlignment="Top" FontSize="14" Height="19" Width="53"/>

    </Grid>
</Window>
